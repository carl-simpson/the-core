    <style>
        /* CSS Reset & Base */
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        :root {
            /* Magento Bauhaus Colors */
            --magento-orange: #F26423;
            --magento-yellow: #F1BC1B;
            --magento-charcoal: #2C2C2C;
            --magento-off-white: #FAFAFA;

            /* Semantic Colors */
            --text-primary: #2C2C2C;
            --text-muted: #666666;
            --text-inverse: #FFFFFF;
            --border-color: #E5E5E5;
            --surface-white: #FFFFFF;
            --surface-subtle: #F9F9F9;
            --surface-warning: #FFF8F0;
            --border-warning: #FFE5CC;

            /* Spacing System (8px base) */
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-6: 24px;
            --space-8: 32px;
            --space-12: 48px;
            --space-16: 64px;
            --space-24: 96px;

            /* Typography */
            --font-sans: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            --font-mono: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, monospace;
        }

        @media (prefers-reduced-motion: reduce) {
            *, *::before, *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }

        /* Typography Scale */
        body {
            font-family: var(--font-sans);
            font-size: 16px;
            line-height: 1.6;
            color: var(--text-primary);
            background: var(--magento-off-white);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        h1 {
            font-size: 2.5rem;
            line-height: 1.2;
            font-weight: 600;
            letter-spacing: -0.02em;
            margin-bottom: var(--space-4);
        }

        h2 {
            font-size: 1.875rem;
            line-height: 1.3;
            font-weight: 600;
            letter-spacing: -0.01em;
            margin-top: var(--space-16);
            margin-bottom: var(--space-6);
            color: var(--magento-charcoal);
        }

        h3 {
            font-size: 1.5rem;
            line-height: 1.4;
            font-weight: 600;
            margin-top: var(--space-12);
            margin-bottom: var(--space-4);
            color: var(--magento-charcoal);
        }

        h4 {
            font-size: 1.25rem;
            line-height: 1.5;
            font-weight: 600;
            margin-top: var(--space-8);
            margin-bottom: var(--space-3);
            color: var(--text-primary);
        }

        p {
            margin-bottom: var(--space-4);
            max-width: 75ch;
        }

        /* Hero Section with Hexagon Pattern */
        

        

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero h1 {
            color: var(--text-inverse);
            margin-bottom: var(--space-6);
        }

        .hero-meta {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-6);
            margin-top: var(--space-6);
            font-size: 0.875rem;
        }

        .hero-meta-item {
            display: flex;
            flex-direction: column;
            gap: var(--space-1);
        }

        .hero-meta-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 500;
        }

        .hero-meta-value {
            color: var(--text-inverse);
            font-weight: 600;
            font-size: 1rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: var(--space-1) var(--space-3);
            background: var(--magento-orange);
            color: var(--text-inverse);
            
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.03em;
            text-transform: uppercase;
        }

        .badge-verified {
            background: #10B981;
        }

        /* Layout */
        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--space-6);
        }

        @media (min-width: 768px) {
            .container {
                padding: 0 var(--space-8);
            }
        }

        /* Breadcrumb */
        .breadcrumb {
            background: var(--surface-white);
            border-bottom: 1px solid var(--border-color);
            padding: var(--space-4) 0;
        }

        .breadcrumb nav {
