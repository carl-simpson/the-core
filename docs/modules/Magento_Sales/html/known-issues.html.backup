        }

        .breadcrumb-current {
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        /* Main Content */
        main {
            background: var(--surface-white);
            padding: var(--space-12) 0 var(--space-24);
        }

        /* Warning Callouts */
        .callout {
            background: var(--surface-warning);
            border-left: 4px solid var(--magento-orange);
            
            padding: var(--space-6);
            margin: var(--space-8) 0;
        }

        .callout-header {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            margin-bottom: var(--space-3);
        }

        .callout-icon {
            width: 24px;
            height: 24px;
            flex-shrink: 0;
        }

        .callout-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--magento-charcoal);
            margin: 0;
        }

        .callout p:last-child {
            margin-bottom: 0;
        }

        .callout-critical {
            background: #FEF2F2;
            border-left-color: #DC2626;
        }

        .callout-high {
            background: #FFF8F0;
            border-left-color: var(--magento-orange);
        }

        .callout-medium {
            background: #FFFBEB;
            border-left-color: var(--magento-yellow);
        }

        .callout-low {
            background: #F0F9FF;
            border-left-color: #3B82F6;
        }

        /* Tables */
        .table-wrapper {
            overflow-x: auto;
            margin: var(--space-8) 0;
            border: 1px solid var(--border-color);
            
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.875rem;
        }

        thead {
