        /* Lists */
        ul, ol {
            margin: var(--space-4) 0;
            padding-left: var(--space-8);
        }

        li {
            margin-bottom: var(--space-2);
        }

        /* Issue Cards */
        .issue-card {
            background: var(--surface-white);
            border: 1px solid var(--border-color);
            
            padding: var(--space-6);
            margin: var(--space-8) 0;
            scroll-margin-top: var(--space-8);
        }

        .issue-header {
            display: flex;
            flex-wrap: wrap;
            align-items: baseline;
            gap: var(--space-3);
            margin-bottom: var(--space-4);
        }

        .issue-number {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            font-size: 0.875rem;
            color: var(--text-muted);
        }

        .severity-badge {
            padding: var(--space-1) var(--space-3);
            
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.03em;
        }

        .severity-critical {
            background: #FEE2E2;
            color: #991B1B;
        }

        .severity-high {
            background: #FFEDD5;
            color: #9A3412;
        }

        .severity-medium {
            background: #FEF3C7;
            color: #92400E;
        }

        .severity-low {
            background: #DBEAFE;
            color: #1E40AF;
        }

        .issue-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-4);
            margin: var(--space-6) 0;
            padding: var(--space-4);
            background: var(--surface-subtle);
            
            font-size: 0.875rem;
        }

        .issue-meta-item {
            display: flex;
            flex-direction: column;
            gap: var(--space-1);
        }

        .issue-meta-label {
            color: var(--text-muted);
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .issue-meta-value {
            color: var(--text-primary);
            font-weight: 500;
        }

        /* Status Badges */
        .status-open {
            background: #DCFCE7;
            color: #166534;
        }

        .status-closed {
            background: #E5E7EB;
            color: #374151;
        }

        /* Horizontal Rule */
        hr {
            border: none;
            border-top: 1px solid var(--border-color);
            margin: var(--space-12) 0;
        }

        /* Skip Link */
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: var(--magento-orange);
            color: var(--text-inverse);
            padding: var(--space-2) var(--space-4);
            text-decoration: none;
            z-index: 100;
        }

        .skip-link:focus {
            top: 0;
        }

        /* Responsive Tables */
        @media (max-width: 768px) {
            .table-wrapper {
                border: none;
                
            }

            table {
                font-size: 0.8125rem;
            }

            th, td {
                padding: var(--space-3);
            }
        }

        /* Section Navigation */
        .section-nav {
            background: var(--surface-subtle);
            border: 1px solid var(--border-color);
            
            padding: var(--space-6);
            margin: var(--space-8) 0;
        }

        .section-nav h3 {
            margin-top: 0;
            margin-bottom: var(--space-4);
            font-size: 1.125rem;
        }

        .section-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .section-nav li {
            margin-bottom: var(--space-2);
        }

        .section-nav a {
            display: block;
            padding: var(--space-2) var(--space-3);
            
            transition: background 200ms ease-out;
            text-decoration: none;
        }

        .section-nav a:hover {
            background: var(--surface-white);
        }

        /* Print Styles */
        @media print {
            .breadcrumb, .skip-link {
                display: none;
            }

            

            pre {
                border: 1px solid var(--border-color);
            }
        }
    </style>
</head>
