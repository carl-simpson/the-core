# Magento Core Analyzer Configuration

# Path to Magento 2 installation (can be absolute or relative)
# This is where the tool will look for vendor/magento/module-* to analyze
MAGENTO_PATH=./magento2

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=magento-analyzer
NEO4J_HEAP_SIZE=2G

# Portainer (Optional Docker Management UI)
PORTAINER_PORT=9000

# Parser Configuration
PARSE_PARALLEL_WORKERS=4
PARSE_TIMEOUT_MS=300000

# Output Configuration
OUTPUT_DIR=./data
DIAGRAMS_DIR=./diagrams

# Logging
LOG_LEVEL=info
