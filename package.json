{
  "name": "magento-core-analyzer",
  "version": "0.1.0",
  "description": "Magento 2 Core Documentation & Mapping Tool - Parse, analyze, and visualize Magento core architecture",
  "main": "src/cli/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/cli/index.js",
    "dev": "node --watch src/cli/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src/",
    "docker:up": "./scripts/docker-up.sh",
    "docker:down": "./scripts/docker-down.sh",
    "neo4j:start": "docker-compose -f docker/docker-compose.yml up -d neo4j",
    "neo4j:stop": "docker-compose -f docker/docker-compose.yml stop neo4j",
    "neo4j:browser": "open http://localhost:7474",
    "parse": "node src/cli/index.js parse",
    "query": "node src/cli/index.js query"
  },
  "bin": {
    "mage-map": "./src/cli/index.js"
  },
  "keywords": [
    "magento",
    "magento2",
    "documentation",
    "analysis",
    "graph-database",
    "dependency-injection",
    "architecture"
  ],
  "author": "Magento Community",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-xml-parser": "^4.3.2",
    "neo4j-driver": "^5.14.0",
    "dotenv": "^16.3.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.3",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0"
  }
}
